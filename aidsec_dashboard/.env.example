# AidSec Dashboard Environment Variables
# Copy this file to .env and fill in your values

# --------------------------------------------------
# Core App / Security
# --------------------------------------------------
APP_PASSWORD=change-me
API_KEY=change-me-global-api-key

# Optional: per-agent keys for OpenClaw queue auth
# Format: agentId=secret,agentId=secret
AGENT_API_KEYS=agent1=change-me-agent1,agent2=change-me-agent2

# Telegram Bot Integration (optional)
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=
TELEGRAM_ALLOWED_CHAT_IDS=
TELEGRAM_ALLOWED_USER_IDS=

# --------------------------------------------------
# API / CORS
# --------------------------------------------------
# Add your production frontend URL(s), comma-separated
# Example: https://aidsec-dashboard.vercel.app,https://www.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# --------------------------------------------------
# Database
# --------------------------------------------------
# Local fallback (SQLite) is used when DATABASE_URL is empty.
# For cloud deploy use PostgreSQL URL, e.g.
# DATABASE_URL=postgresql+psycopg://user:pass@host:5432/dbname
DATABASE_URL=

# SMTP Settings (for sending emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=AidSec Team
SMTP_FROM_EMAIL=noreply@aidsec.ch

# LM Studio Settings (local LLM)
LM_STUDIO_URL=http://localhost:1234/v1

# OpenAI Settings (cloud LLM - optional)
# OPENAI_API_KEY=sk-your-api-key
# OPENAI_MODEL=gpt-3.5-turbo

# Default LLM Provider (lm_studio or openai)
DEFAULT_PROVIDER=lm_studio

# Default Model
DEFAULT_MODEL=llama-3

# Outlook / Microsoft 365 Settings (for creating email drafts)
OUTLOOK_TENANT_ID=your-tenant-id
OUTLOOK_CLIENT_ID=your-client-id
OUTLOOK_CLIENT_SECRET=your-client-secret
OUTLOOK_USER_EMAIL=your.email@domain.onmicrosoft.com
