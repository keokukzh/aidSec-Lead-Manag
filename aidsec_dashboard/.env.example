# AidSec Dashboard Environment Variables
# Copy this file to .env and fill in your values

# SMTP Settings (for sending emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_NAME=AidSec Team
SMTP_FROM_EMAIL=noreply@aidsec.ch

# LM Studio Settings (local LLM)
LM_STUDIO_URL=http://localhost:1234/v1

# OpenAI Settings (cloud LLM - optional)
# OPENAI_API_KEY=sk-your-api-key
# OPENAI_MODEL=gpt-3.5-turbo

# Default LLM Provider (lm_studio or openai)
DEFAULT_PROVIDER=lm_studio

# Default Model
DEFAULT_MODEL=llama-3

# Outlook / Microsoft 365 Settings (for creating email drafts)
OUTLOOK_TENANT_ID=your-tenant-id
OUTLOOK_CLIENT_ID=your-client-id
OUTLOOK_CLIENT_SECRET=your-client-secret
OUTLOOK_USER_EMAIL=your.email@domain.onmicrosoft.com
